							<div class="add-to-cart">
							  <button class="add-to-cart-btn"><i class="fa fa-shopping-cart"></i> add ao carrinho</button>
							</div>
						  </div>
						</div>
						<% contas++; %>
					  <% } %>
					<% } %>
					
